#!/bin/bash -e
#
# S2I assemble script for the 'centos/python-36-centos7' image.
# The 'assemble' script builds your application source so that it is ready to run.
#
# For more information refer to the documentation:
#	https://github.com/openshift/source-to-image/blob/master/docs/builder_image.md
#

# If the 'centos/python-36-centos7' assemble script is executed with the '-h' flag, print the usage.
if [[ "$1" == "-h" ]]; then
	exec /usr/libexec/s2i/usage
fi

# Restore artifacts from the previous build (if they exist).
#
if [ "$(ls /tmp/artifacts/ 2>/dev/null)" ]; then
  echo "---> Restoring build artifacts..."
  mv /tmp/artifacts/. ./
fi

echo "---> Copying application source..."
cp -Rf /tmp/src/. ./

export PBR_VERSION=0.0.1
pip install -U pip setuptools
pip install pbr

echo "---> Installing Horizon..."
cd horizon
pip install -c https://git.openstack.org/cgit/openstack/requirements/plain/upper-constraints.txt?h=stable/stein -e .
cd ../

echo "---> Installing Adjutant-UI..."
cd adjutant-ui
pip install --no-deps -e .
cd ../
